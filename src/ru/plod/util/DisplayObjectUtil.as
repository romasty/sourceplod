package ru.plod.util {	import flash.display.DisplayObject;	import flash.display.DisplayObjectContainer;	/**	 * Created with IntelliJ IDEA.	 * User: Romasty	 * Date: 24.01.14	 * Time: 12:52	 * To change this template use File | Settings | File Templates.	 */	public class DisplayObjectUtil {		public static function getChildByName(displayObject : DisplayObject, name : String, classRef : Class = null) : DisplayObject		{			if(displayObject == null) throw new ArgumentError();			if(displayObject.name == name && (classRef ? displayObject is classRef : true)) return displayObject;			if(displayObject is DisplayObjectContainer) {				var displayObjectCont : DisplayObjectContainer =  displayObject as DisplayObjectContainer;				for (var i:int = 0; i < displayObjectCont.numChildren; i++) {					var child : DisplayObject = displayObjectCont.getChildAt(i) ;					var result : DisplayObject = getChildByName(child, name, classRef);					if(result) return result;				}			}			return null;		}	}}