package ru.plod.util {	import flash.display.DisplayObject;	import flash.display.DisplayObjectContainer;	/**	 * Created with IntelliJ IDEA.	 * User: Romasty	 * Date: 24.01.14	 * Time: 12:52	 * To change this template use File | Settings | File Templates.	 */	public class DisplayObjectUtil {		public static function getChildByName(displayObject : DisplayObjectContainer, name : String, classRef : Class = null) : DisplayObject		{			if(displayObject == null) throw new ArgumentError();			if(displayObject.name == name && (classRef ? displayObject is classRef : true)) return displayObject;			for (var i:int = 0; i < displayObject.numChildren; i++) {				var child : DisplayObject = getChildByName(displayObject, name, classRef);				if(child) return child;			}			return null;		}	}}